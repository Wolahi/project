{
  "compilerOptions": {
    "target": "ES2021",
    "watch": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": [
  "./src/**/*",
    "prettier.config.js",
    "webpack.config.js",
    "declarations.d.ts",
    "ORMconfig.ts"  ],
  "exclude": [
    "node_modules",
  ]
}